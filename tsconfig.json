{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "outDir": "./build/",
    "moduleResolution": "node16",
    "declaration": true,
    //"removeComments": true,
    "strict": true,
    "noImplicitReturns": true
    //"esModuleInterop": true,
    //"experimentalDecorators": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}
