{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "outDir": "./",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}
